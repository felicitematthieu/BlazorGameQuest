    }

    .leaderboard-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    }

    .leaderboard-item.rank-1 {
        background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
        border: 3px solid #ffd700;
    }

    .leaderboard-item.rank-2 {
        background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
        border: 3px solid #c0c0c0;
    }

    .leaderboard-item.rank-3 {
        background: linear-gradient(135deg, #cd7f32 0%, #e6a57e 100%);
        border: 3px solid #cd7f32;
    }

    .leaderboard-item.inactive {
        opacity: 0.5;
    }

    .rank {
        width: 80px;
        text-align: center;
    }

    .medal {
        font-size: 3rem;
    }

    .rank-number {
        font-size: 2rem;
        font-weight: bold;
        color: #667eea;
    }

    .player-info {
        flex: 1;
        margin-left: 20px;
    }

    .player-info h3 {
        margin: 0 0 5px 0;
        font-size: 1.5rem;
    }

    .stats {
        display: flex;
        gap: 15px;
        font-size: 0.9rem;
        color: #666;
    }

    .badge-inactive {
        background-color: #f44336;
        color: white;
        padding: 2px 8px;
        border-radius: 8px;
        font-size: 0.75rem;
    }

    .scores {
        display: flex;
        gap: 20px;
    }

    .score-item {
        text-align: center;
    }

    .score-item .label {
