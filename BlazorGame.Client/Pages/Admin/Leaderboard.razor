@page "/admin/leaderboard"
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Classement G√©n√©ral</PageTitle>

<div class="container">
    <div class="header">
        <h1>üèÜ Classement G√©n√©ral</h1>
        <a href="/admin" class="btn btn-secondary">‚Üê Retour</a>
    </div>

    @if (loading)
    {
        <p>Chargement...</p>
    }
    else if (leaderboard != null && leaderboard.Any())
    {
        <div class="leaderboard-container">
            @for (int i = 0; i < leaderboard.Count; i++)
            {
                var entry = leaderboard[i];
                var rank = i + 1;
                var medal = rank == 1 ? "ü•á" : rank == 2 ? "ü•à" : rank == 3 ? "ü•â" : "";

                <div class="leaderboard-item rank-@rank @(!entry.IsActive ? "inactive" : "")">
                    <div class="rank">
                        @if (!string.IsNullOrEmpty(medal))
                        {
                            <span class="medal">@medal</span>
                        }
                        else
                        {
                            <span class="rank-number">#@rank</span>
                        }
                    </div>
                    <div class="player-info">
                        <h3>@entry.PlayerName</h3>
                        <div class="stats">
                            <span>ID: @entry.PlayerId</span>
                            @if (!entry.IsActive)
                            {
                                <span class="badge-inactive">D√©sactiv√©</span>
                            }
                        </div>
                    </div>
                    <div class="scores">
                        <div class="score-item">
                            <div class="label">Score Total</div>
                            <div class="value">@entry.TotalScore</div>
                        </div>
                        <div class="score-item">
                            <div class="label">Meilleur Score</div>
                            <div class="value">@entry.BestScore</div>
                        </div>
                        <div class="score-item">
                            <div class="label">Parties</div>
                            <div class="value">@entry.CompletedAdventures / @entry.TotalAdventures</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Aucune donn√©e de classement disponible.</p>
    }
</div>

@code {
    private List<LeaderboardEntry>? leaderboard;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        leaderboard = await Http.GetFromJsonAsync<List<LeaderboardEntry>>("http://localhost:5198/api/admin/leaderboard?top=50");
        loading = false;
    }

    class LeaderboardEntry
    {
        public int PlayerId { get; set; }
        public string PlayerName { get; set; } = "";
        public bool IsActive { get; set; }
        public int TotalScore { get; set; }
        public int CompletedAdventures { get; set; }
        public int TotalAdventures { get; set; }
        public int BestScore { get; set; }
    }
}

<style>
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

