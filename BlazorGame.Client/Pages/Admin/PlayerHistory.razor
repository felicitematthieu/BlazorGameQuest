@page "/admin/players/{PlayerId:int}/history"
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>Historique Joueur #@PlayerId</PageTitle>

<div class="container">
    <div class="header">
        <h1>üìú Historique du Joueur #@PlayerId</h1>
        <a href="/admin/players" class="btn btn-secondary">‚Üê Retour aux joueurs</a>
    </div>

    @if (loading)
    {
        <p>Chargement...</p>
    }
    else if (adventures != null && adventures.Any())
    {
        <div class="stats-summary">
            <div class="stat-card">
                <div class="stat-value">@adventures.Count</div>
                <div class="stat-label">Parties Totales</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@adventures.Count(a => a.Status == "Completed")</div>
                <div class="stat-label">Victoires</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@adventures.Sum(a => a.TotalScore)</div>
                <div class="stat-label">Score Total</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@adventures.Max(a => a.TotalScore)</div>
                <div class="stat-label">Meilleur Score</div>
            </div>
        </div>

        <div class="adventures-list">
            @foreach (var adv in adventures)
            {
                <div class="adventure-card @adv.Status.ToLower()">
                    <div class="adventure-header">
                        <div>
                            <h3>Partie #@adv.Id</h3>
                            <span class="date">@adv.StartTime.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="status-badge @adv.Status.ToLower()">
                            @adv.Status
                        </div>
                    </div>
                    <div class="adventure-stats">
                        <div class="stat">
                            <span class="label">Score:</span>
                            <span class="value @(adv.TotalScore > 0 ? "positive" : "negative")">@adv.TotalScore</span>
                        </div>
                        <div class="stat">
                            <span class="label">Salles:</span>
                            <span class="value">@adv.Rooms.Count</span>
                        </div>
                        <div class="stat">
                            <span class="label">Dur√©e:</span>
                            <span class="value">@GetDuration(adv)</span>
                        </div>
                    </div>
                    <div class="rooms-preview">
                        @foreach (var room in adv.Rooms.Take(3))
                        {
                            <span class="room-badge">@room.RoomTitle</span>
                        }
                        @if (adv.Rooms.Count > 3)
                        {
                            <span class="room-badge">+@(adv.Rooms.Count - 3) salles</span>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Aucune partie trouv√©e pour ce joueur.</p>
    }
</div>

@code {
    [Parameter]
    public int PlayerId { get; set; }

    private List<AdventureDto>? adventures;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        adventures = await Http.GetFromJsonAsync<List<AdventureDto>>($"http://localhost:5198/api/players/{PlayerId}/history");
        loading = false;
    }

    private string GetDuration(AdventureDto adv)
    {
        if (adv.EndTime == null) return "En cours";
        var duration = adv.EndTime.Value - adv.StartTime;
        if (duration.TotalMinutes < 1) return "< 1min";
        return $"{(int)duration.TotalMinutes}min";
    }

    class AdventureDto
    {
        public int Id { get; set; }
        public int TotalScore { get; set; }
        public string Status { get; set; } = "";
        public DateTime StartTime { get; set; }
        public DateTime? EndTime { get; set; }
        public List<RoomDto> Rooms { get; set; } = new();
    }

    class RoomDto
    {
        public string RoomTitle { get; set; } = "";
    }
}

