@page "/admin/players"
@using System.Net.Http.Json
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Gestion Joueurs</PageTitle>

<div class="container">
    <div class="header">
        <h1>üë• Gestion des Joueurs</h1>
        <div>
            <button class="btn btn-primary" @onclick="ExportPlayers">üì• Exporter CSV</button>
            <a href="/admin" class="btn btn-secondary">‚Üê Retour</a>
        </div>
    </div>

    @if (loading)
    {
        <p>Chargement...</p>
    }
    else if (players != null)
    {
        <div class="table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Niveau</th>
                        <th>Statut</th>
                        <th>Score Total</th>
                        <th>Parties</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in players)
                    {
                        <tr class="@(player.IsActive ? "" : "inactive")">
                            <td>@player.Id</td>
                            <td>
                                <a href="/admin/players/@player.Id/history">@player.UserName</a>
                            </td>
                            <td>@player.Level</td>
                            <td>
                                <span class="badge @(player.IsActive ? "active" : "inactive")">
                                    @(player.IsActive ? "Actif" : "D√©sactiv√©")
                                </span>
                            </td>
                            <td>@(GetPlayerStats(player.Id)?.TotalScore ?? 0)</td>
                            <td>@(GetPlayerStats(player.Id)?.AdventureCount ?? 0)</td>
                            <td>
                                <button class="btn btn-sm @(player.IsActive ? "btn-danger" : "btn-success")"
                                        @onclick="() => TogglePlayerStatus(player.Id, !player.IsActive)">
                                    @(player.IsActive ? "D√©sactiver" : "Activer")
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<PlayerDto>? players;
    private Dictionary<int, PlayerStats>? statsDict;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPlayers();
    }

    private async Task LoadPlayers()
    {
        loading = true;
        var response = await Http.GetFromJsonAsync<PlayersResponse>("http://localhost:5198/api/admin/players");
        players = response?.Data;

        // Charger les stats des joueurs
        if (players != null)
        {
            var adventuresResponse = await Http.GetFromJsonAsync<AdventuresResponse>("http://localhost:5198/api/admin/adventures?pageSize=1000");
            if (adventuresResponse?.Data != null)
            {
                statsDict = adventuresResponse.Data
                    .Where(a => a.PlayerId.HasValue)
                    .GroupBy(a => a.PlayerId!.Value)
                    .ToDictionary(
                        g => g.Key,
                        g => new PlayerStats
                        {
                            TotalScore = g.Sum(a => a.TotalScore),
                            AdventureCount = g.Count()
                        });
            }
        }

        loading = false;
    }

    private PlayerStats? GetPlayerStats(int playerId)
    {
        return statsDict?.ContainsKey(playerId) == true ? statsDict[playerId] : null;
    }

    private async Task TogglePlayerStatus(int playerId, bool isActive)
    {
        var response = await Http.PutAsJsonAsync($"http://localhost:5198/api/admin/players/{playerId}/status", isActive);
        if (response.IsSuccessStatusCode)
        {
            await LoadPlayers();
        }
    }

    private async Task ExportPlayers()
    {
        await JS.InvokeVoidAsync("open", "http://localhost:5198/api/admin/players/export", "_blank");
    }

    class PlayersResponse
    {
        public List<PlayerDto>? Data { get; set; }
    }

    class AdventuresResponse
    {
        public List<AdventureDto>? Data { get; set; }
    }

    class PlayerDto
    {
        public int Id { get; set; }
        public string UserName { get; set; } = "";
        public int Level { get; set; }
        public bool IsActive { get; set; }
    }

    class AdventureDto
    {
        public int Id { get; set; }
        public int? PlayerId { get; set; }
        public int TotalScore { get; set; }
        public string Status { get; set; } = "";
    }

    class PlayerStats
    {
        public int TotalScore { get; set; }
        public int AdventureCount { get; set; }
    }
}

